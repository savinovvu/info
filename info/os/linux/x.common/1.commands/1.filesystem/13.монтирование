# /dev - каталог для дисков
/dev/sda - без цифры, физические диски
/dev/sda1 - c цифрой на конце - это логические диски

# все точки, которые будут примонтированы после запуска
/etc/fstab

# информация о дисках
lsblk
lsblk -o UUID

# что куда подмонтировано
mount

# точки монитрования
/proc/self/mounts

# симлинки на каталог выше
/proc/mounts
/etc/mtab

# примонтировать
mount что  куда
sudo mount /dev/sda /mnt/

# отключить можно указав каталог или диск
umount /mnt/
umount /dev/sda